<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/channel"
    tools:context="com.example.antou.trial_7.Add_Inst">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:id="@+id/Pass_Entry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_marginTop="50dp"
        android:id="@+id/Name_entry"
        android:layout_below="@+id/Pass_Entry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Type_entry"
        android:layout_below="@+id/Name_entry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Pass_Edit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Pass_Entry"
        android:layout_toEndOf="@+id/Pass_Entry"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"

        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Name_edit"
        android:layout_alignTop="@+id/Name_entry"
        android:layout_toRightOf="@+id/Pass_Entry"
        android:layout_marginLeft="65dp"
        android:layout_toEndOf="@+id/Pass_Entry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/Submit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
